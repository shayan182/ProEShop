@model ProEShop.ViewModels.Variants.EditVariantViewMode
<form class="alert alert-secondary custom-ajax-form" asp-page-handler="Edit" method="post">
    <input asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-3 my-2">
            <label class="form-label" asp-for="Value"></label>
            <input class="form-control" asp-for="Value" />
            <span class="span-error-message" asp-validation-for="Value"></span>
        </div>
        <div class="col-12 col-sm-4 col-lg-3 my-2">
        <label class="form-label" asp-for="ColorCode"></label>
        @if (Model.IsColor)
        {
                <input class="form-control " asp-for="ColorCode"  placeholder="#ffffff" />
        }
        else
        {
                <input class="form-control " asp-for="ColorCode" disabled="disabled" placeholder="#ffffff" />
        }
            <span class="span-error-message" asp-validation-for="ColorCode" ></span>
        </div>
        <div class="col-12 col-lg-4 my-2 form-check form-switch px-3">
            <label class="form-check-label" asp-for="IsColor">سایز</label>
            <div>
                <input class=" form-check-input m-0" asp-for="IsColor" />
            </div>
        </div>
        <div class="col-12 my-2">
            <div class="d-grid d-lg-block">
                <button type="submit" class="btn btn-primary d-inline-flex align-items-center submit-custom-ajax-button">
                    ویرایش
                    <span class="spinner-border spinner-border-sm d-none ms-2"></span>
                </button>
            </div>
        </div>
    </div>
</form>